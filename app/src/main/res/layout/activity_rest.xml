        <TextView
            android:id="@+id/currentSpeedLevelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed Level : " />

        <TextView
            android:id="@+id/currentSpeedLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>

    </LinearLayout>
